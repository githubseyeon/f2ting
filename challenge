npm install

npm install dayjs

import { useState, useEffect } from 'react';
import dayjs from 'dayjs';
import styles from '../styles/Home.module.css';

export default function Home() {
  const [challengeDate, setChallengeDate] = useState('');
  const [daysLeft, setDaysLeft] = useState(null);

  useEffect(() => {
    if (challengeDate) {
      const endDate = dayjs(challengeDate);
      const today = dayjs();
      const diff = endDate.diff(today, 'day');
      setDaysLeft(diff);
    }
  }, [challengeDate]);

  return (
    <div className={styles.container}>
      <header className={styles.header}>
        <h1>식단 인증 챌린지</h1>
      </header>
      
      <main className={styles.main}>
        <div className={styles.banner}>
          <label htmlFor="challengeDate">챌린지 기한 설정:</label>
          <input 
            type="date" 
            id="challengeDate" 
            value={challengeDate} 
            onChange={(e) => setChallengeDate(e.target.value)} 
          />
          {daysLeft !== null && (
            <p>D-DAY: {daysLeft}일 남음</p>
          )}
        </div>
      </main>
    </div>
  );
}

.container {
    min-height: 100vh;
    padding: 0 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .header {
    width: 100%;
    padding: 1rem 0;
    background-color: #f5f5f5;
    text-align: center;
  }
  
  .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    padding: 1rem;
  }
  
  .banner {
    background-color: #e0f7fa;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
  }
  
  .banner input {
    margin-top: 1rem;
